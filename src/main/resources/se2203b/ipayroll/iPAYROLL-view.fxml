    <top>
        <MenuBar fx:id="mainMenu" BorderPane.alignment="CENTER">
            <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="loginMenuItem" mnemonicParsing="false" onAction="#login" text="Login" />
                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#exit" text="Close" />
                    </items>
                </Menu>
                <Menu fx:id="manageEmployeeProfileMenu" mnemonicParsing="false" text="Manage Employee Profiles">
                    <items>
                        <MenuItem fx:id="addProfileMenuItem" mnemonicParsing="false" onAction="#addNewUserProfile" text="Add new profile" />
                        <MenuItem fx:id="modifyProfileMenuItem" mnemonicParsing="false" onAction="#modifyEmployeeProfile" text="Modify/Delete profile" />
                    </items></Menu>
                <Menu fx:id="generateReportsMenu" mnemonicParsing="false" text="Generate Payroll Reports">
                    <items>
                        <MenuItem fx:id="localPayrollExpensesMenuItem" mnemonicParsing="false" text="Local payroll expenses" />
                  <MenuItem fx:id="federalTaxWothholdingsMenuItem" mnemonicParsing="false" text="Federal tax withholdings" />
                    </items></Menu>
                <Menu fx:id="printChecksMenu" mnemonicParsing="false" text="Print Checks" />
                <Menu fx:id="viewCompensationMenu" mnemonicParsing="false" text="View Compensations" />
                <Menu fx:id="manageLeavesMenu" mnemonicParsing="false" text="Manage leaves" />
