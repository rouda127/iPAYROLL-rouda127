<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="727.0" prefWidth="1030.0"
            style="-fx-background-image: url(&quot;file:src/main/resources/se2203b/ipayroll/WesternBackground.png&quot;);
                        -fx-background-repeat: no-repeat;
                                 -fx-background-size: 100% 100%;" xmlns="http://javafx.com/javafx/17.0.2-ea"
